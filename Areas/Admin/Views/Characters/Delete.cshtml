@model LCARS.Models.Character

@{
    ViewData["Title"] = "Delete";
}
<div class="container p-5">
    <h2 class="text-danger">Delete</h2>
    <h3>Are you sure you want to delete this character?</h3>
    <form asp-action="Delete">
        <input type="hidden" asp-for="CharacterId" />
        <table class="table">
            <tr>
                <td colspan="3" class="border-top-0">
                    <h3 class="text-danger">@Html.DisplayFor(modelItem => Model.Name)</h3>
                    <span class="text-warning">@Html.DisplayFor(modelItem => Model.Tips)</span>
                </td>
            </tr>
            <tr>
                <td>@Html.DisplayFor(modelItem => Model.Role)</td>
                <td>@Html.DisplayFor(modelItem => Model.Password)</td>
                <td>
                    <h4 class="text-primary">@Html.DisplayFor(modelItem => Model.TraitName)</h4>
                    @Html.DisplayFor(modelItem => Model.TraitDescription)
                </td>
            </tr>
            <tr>
                <td colspan="3">@Html.DisplayFor(modelItem => Model.Story)</td>
            </tr>
            <tr>
                <td colspan="3">
                    <input type="submit" value="Delete" class="btn btn-danger"/>
                </td>
            </tr>
        </table>
    </form>
</div>

