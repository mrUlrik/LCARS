@model LCARS.Models.Location

@{
    ViewData["Title"] = "Delete";
}
<div class="container p-5">
    <h1 class="text-info">Locations</h1>
    <h2>Are you sure you want to delete this location?</h2>
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="LocationId" />
        <table class="table">
            <tr>
                <th><label asp-for="Name" class="control-label"></label></th>
                <th></th>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        @Html.DisplayFor(model => model.Name)
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </td>
                <td><input type="submit" value="Delete" class="btn btn-success" /></td>
            </tr>
        </table>
    </form>
</div>